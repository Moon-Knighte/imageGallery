<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Include the Tailwind CSS stylesheet -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
    <!-- Additional head content -->
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-semibold text-center text-blue-500 mb-6">
        Image Gallery
      </h1>

      <!-- Create Form -->
      <form
        action="/images"
        method="POST"
        enctype="multipart/form-data"
        class="max-w-md mx-auto bg-white p-6 rounded-md shadow-md"
      >
        <!-- Form fields for creating a new image -->
        <div class="mb-4">
          <label for="title" class="block text-sm font-medium text-gray-600"
            >Title:</label
          >
          <input
            type="text"
            id="title"
            name="title"
            required
            class="mt-1 p-2 w-full border rounded-md"
          />
        </div>
        <div class="mb-4">
          <label
            for="description"
            class="block text-sm font-medium text-gray-600"
            >Description:</label
          >
          <textarea
            id="description"
            name="description"
            class="mt-1 p-2 w-full border rounded-md"
          ></textarea>
        </div>
        <div class="mb-4">
          <label for="image" class="block text-sm font-medium text-gray-600"
            >Image:</label
          >
          <input
            type="file"
            id="image"
            name="image"
            accept="image/*"
            required
            class="mt-1 p-2 w-full border rounded-md"
          />
        </div>
        <button
          type="submit"
          class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue active:bg-blue-800 transition duration-150 ease-in-out"
        >
          Upload Image
        </button>
      </form>

      <ul class="mt-8">
        <% images.forEach(image => { %>
        <li class="mb-4">
          <a
            href="/images/<%= image._id %>"
            class="text-blue-500 hover:underline"
            ><%= image.title %></a
          >
          <!-- Update Form -->
          <form
            action="/images/<%= image._id %>?_method=PUT"
            method="POST"
            class="inline-block"
          >
            <!-- Form fields for updating image -->
            <button
              type="submit"
              class="text-blue-500 hover:underline focus:outline-none"
            >
              Update Image
            </button>
          </form>
          <!-- Delete Form -->
          <form
            action="/images/<%= image._id %>?_method=DELETE"
            method="POST"
            class="inline-block ml-2"
          >
            <button
              type="submit"
              class="text-red-500 hover:underline focus:outline-none"
            >
              Delete Image
            </button>
          </form>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
